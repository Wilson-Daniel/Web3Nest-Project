<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".OTPVerifictionActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView4"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:text="OTP Verification"
            android:textColor="#36383D"
            android:textSize="24sp"
            android:textStyle="bold"
            app:fontFamily="@font/montserrat_alternates"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.466"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="52dp"

            android:text="Enter your received OTP here"
            app:fontFamily="@font/montserrat_alternates"
            app:layout_constraintEnd_toEndOf="@+id/textView4"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvMobile" />

        <TextView
            android:id="@+id/tvMobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="+91-1234567890"
            android:textColor="#36383D"
            android:textSize="20sp"
            app:fontFamily="@font/montserrat_alternates"
            app:layout_constraintEnd_toEndOf="@+id/textView4"
            app:layout_constraintStart_toStartOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <EditText
            android:id="@+id/otpverification_ET_C1"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="3dp"
            android:ems="10"
            android:gravity="center"
            android:background="@drawable/login_number_bg"
            app:fontFamily="@font/montserrat_alternates"
            android:inputType="phone"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/otpverification_ET_C2"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <EditText
            android:id="@+id/otpverification_ET_C2"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginEnd="3dp"
            android:ems="10"
            android:gravity="center"
            android:inputType="phone"
            android:background="@drawable/login_number_bg"
            app:fontFamily="@font/montserrat_alternates"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/otpverification_ET_C1"
            app:layout_constraintEnd_toStartOf="@+id/otpverification_ET_C3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/otpverification_ET_C1"
            app:layout_constraintTop_toTopOf="@+id/otpverification_ET_C1" />

        <EditText
            android:id="@+id/otpverification_ET_C3"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginEnd="3dp"
            android:ems="10"
            android:gravity="center"
            android:background="@drawable/login_number_bg"
            app:fontFamily="@font/montserrat_alternates"
            android:inputType="phone"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/otpverification_ET_C1"
            app:layout_constraintEnd_toStartOf="@+id/otpverification_ET_C4"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/otpverification_ET_C2"
            app:layout_constraintTop_toTopOf="@+id/otpverification_ET_C1" />

        <EditText
            android:id="@+id/otpverification_ET_C4"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginEnd="3dp"
            android:ems="10"
            android:background="@drawable/login_number_bg"
            app:fontFamily="@font/montserrat_alternates"
            android:gravity="center"
            android:inputType="phone"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/otpverification_ET_C1"
            app:layout_constraintEnd_toStartOf="@+id/otpverification_ET_C5"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/otpverification_ET_C3"
            app:layout_constraintTop_toTopOf="@+id/otpverification_ET_C1" />

        <EditText
            android:id="@+id/otpverification_ET_C5"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginEnd="3dp"
            android:ems="10"
            android:background="@drawable/login_number_bg"
            app:fontFamily="@font/montserrat_alternates"
            android:gravity="center"
            android:inputType="phone"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/otpverification_ET_C1"
            app:layout_constraintEnd_toStartOf="@+id/otpverification_ET_C6"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/otpverification_ET_C4"
            app:layout_constraintTop_toTopOf="@+id/otpverification_ET_C1" />

        <EditText
            android:id="@+id/otpverification_ET_C6"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:ems="10"
            android:gravity="center"
            android:background="@drawable/login_number_bg"
            app:fontFamily="@font/montserrat_alternates"
            android:inputType="phone"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/otpverification_ET_C1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/otpverification_ET_C5"
            app:layout_constraintTop_toTopOf="@+id/otpverification_ET_C1"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:text="Don't get the OTP?"
            app:fontFamily="@font/montserrat_alternates"
            app:layout_constraintEnd_toStartOf="@+id/otpverification_TV_ResendBtn"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/otpverification_ET_C6" />

        <TextView
            android:id="@+id/otpverification_TV_ResendBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Resend OTP"

            android:textColor="@color/logo_color"
            android:textStyle="bold"
            app:fontFamily="@font/montserrat_alternates"
            app:layout_constraintBottom_toBottomOf="@+id/textView7"
            app:layout_constraintStart_toEndOf="@+id/textView7"
            app:layout_constraintTop_toTopOf="@+id/textView7" />

        <Button
            android:id="@+id/otpverification_BTN_Verify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="50dp"
            android:text="Verify"
            app:fontFamily="@font/montserrat_alternates"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textStyle="bold"
            app:backgroundTint="@null"
            android:textAllCaps="false"
            android:background="@drawable/login_number_bg"
            android:textColor="#36383D"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            app:layout_constraintVertical_bias="1.0" />

        <ProgressBar
            android:id="@+id/progressBarVerify"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/otpverification_BTN_Verify"
            app:layout_constraintEnd_toEndOf="@+id/otpverification_BTN_Verify"
            app:layout_constraintStart_toStartOf="@+id/otpverification_BTN_Verify"
            app:layout_constraintTop_toTopOf="@+id/otpverification_BTN_Verify" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>